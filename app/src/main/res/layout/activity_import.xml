<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_import"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.contactapp.ImportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/llFirstImport">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="130dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/folder"
                android:id="@+id/imageView6"
                android:layout_weight="4"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/right_arrow"
                android:id="@+id/imageView7"
                android:layout_weight="2"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_view_contact"
                android:id="@+id/imageView8"
                android:layout_weight="4"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="NOTE : To import contacts from your phone, the file should be in .TXT format." />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Select File"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTestImp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/white"

                android:background="@drawable/button_shape"
                android:layout_gravity="bottom|end"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/llSecondImport">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/copy_contact"
            android:id="@+id/imageView9"
            android:layout_marginTop="30dp"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimaryDark"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/teal"/>

            <TextView
                android:text="File Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.6"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:gravity="end"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/split"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:text="FN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvFileName"
                android:layout_weight="4.6"
                android:paddingLeft="16dp"
                android:textColor="@color/white"
                android:gravity="start"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/teal"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/teal"/>

            <TextView
                android:text="Size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.6"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:gravity="end"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/split"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:text="FS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvFileSize"
                android:layout_weight="4.6"
                android:paddingLeft="16dp"
                android:textColor="@color/white"
                android:gravity="start"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/teal"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/teal"/>

            <TextView
                android:text="Contacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.6"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:gravity="end"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/split"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:text="FC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvContactsCount"
                android:layout_weight="4.6"
                android:paddingLeft="16dp"
                android:textColor="@color/white"
                android:gravity="start"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/teal"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Button
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/button_shape_negative"
                    android:layout_marginRight="8dp"
                    android:id="@+id/btnCancel"
                    android:layout_weight="1" />

                <Button
                    android:text="Import"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/button_shape"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/btnImport"
                    android:layout_weight="1" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/llThiredImport"
        android:visibility="gone">

        <TextView
            android:text="That's it, you're done!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="26dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_success"
            android:layout_marginTop="20dp"
            android:scaleType="center"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvImportRes"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:text="Contact Successfully Added!"/>
    </LinearLayout>

</FrameLayout>
