<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba"
    tools:context=".Add_View_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:padding="13dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_24"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/todo"
                tools:ignore="ContentDescription"
                android:showAsAction="collapseActionView|ifRoom"
                android:actionViewClass="android.widget.SearchView"/>



        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_categories"
            android:textSize="35sp"
            android:fontFamily="@font/creepster"
            android:textColor="#F8F5F5"
            android:padding="13dp"
            tools:ignore="HardcodedText" />
        <RelativeLayout
            android:id="@+id/businesscard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/businesscard_layout"
            android:elevation="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Card"
                android:fontFamily="@font/berkshire_swash"
                android:textSize="24sp"
                android:textColor="#050505"
                android:padding="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#191919"
                android:layout_alignParentBottom="true"
                android:padding="15dp"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/businesscard"
                android:layout_marginEnd="-20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_marginRight="-20dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/nidcard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/nationalidcard_layout"
            android:elevation="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NID Card"
                android:fontFamily="@font/berkshire_swash"
                android:textSize="26sp"
                android:textColor="#ffff"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#C3FFFFFF"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_marginRight="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="260dp"
                android:src="@drawable/nid"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/drivinglicense"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/drivinglicense_layout"
            android:elevation="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driving License"
                android:fontFamily="@font/berkshire_swash"
                android:textSize="22sp"
                android:textColor="#ffff"
                android:padding="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#C3FFFFFF"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:src="@drawable/drivinglicense"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="-10dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/transporlicense"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/visitingcard_layout"
            android:elevation="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport license"
                android:fontFamily="@font/berkshire_swash"
                android:textSize="22sp"
                android:textColor="#041BBA"
                android:padding="15dp"
                android:layout_alignParentRight="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#2538BA"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="176dp"
                android:layout_alignParentLeft="true"
                android:contentDescription="TODO"
                android:src="@drawable/drivingli" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/visitingcard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/visitingscard_layout"
            android:elevation="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visiting Card"
                android:fontFamily="@font/berkshire_swash"
                android:textSize="24sp"
                android:textColor="#050505"
                android:padding="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#191919"
                android:layout_alignParentBottom="true"
                android:padding="15dp"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/vvv"
                android:layout_marginEnd="-20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_marginRight="-20dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/certificates"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/certificates_layout"
            android:elevation="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certificates"
                android:fontFamily="@font/berkshire_swash"
                android:textSize="26sp"
                android:textColor="#ffff"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#C3FFFFFF"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:layout_marginRight="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ccc" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bankcards"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/bankcard_layout"
            android:elevation="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/berkshire_swash"
                android:padding="15dp"
                android:text="Bank Cards"
                android:textColor="#ffff"
                android:textSize="22sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#C3FFFFFF"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:src="@drawable/bankcards"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="-10dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/studentcards"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/studentscard_layout"
            android:elevation="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/berkshire_swash"
                android:padding="15dp"
                android:text="Student Cards"
                android:textColor="#041BBA"
                android:textSize="22sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand All"
                android:background="#00000000"
                android:textColor="#2538BA"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="176dp"
                android:layout_alignParentLeft="true"
                android:contentDescription="TODO"
                android:src="@drawable/unnamed" />

        </RelativeLayout>


    </LinearLayout>


</ScrollView>